<%- include('partials/header.ejs')%>
<body>
  <%- include('partials/navbar.ejs') %>

  <div class="container">
    <hr>
    <h1><%=pergunta.title%></h1>
    <p><%= pergunta.desc %></p>
    <hr>
    <form action="/responder" method="post">
      <h3>Responda</h3>
      <label for="corpo">Resposta:</label>
      <textarea name="corpo" id="corpo" class="form-control" placeholder="Digite a sua resposta"></textarea>
      <br>
      <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
      <button type="submit" class="btn btn-primary">Responder</button>
    </form>
    <hr>
      <h3>Respostas</h3>
      <% if (respostas.length <= 0 ){ %>
        <br>
        <p>Ainda não há respostas</p>
      <%} else { %>
      <% respostas.forEach(resposta => { %>
        <br>
        <div class="card">
          <div class="card-body">
            <p><%= resposta.corpo %></p>
          </div>
        </div>
      <% }) %>
      <% } %>

  </div>
</body>
<%- include('partials/footer.ejs')%>